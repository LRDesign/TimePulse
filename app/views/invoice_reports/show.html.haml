- set_headline "Invoice for #{@invoice.client.name}"

- content_for :header do
  = stylesheet_link_tag "invoice_reports", :media =>'all'

%table.invoice-report
  - @invoice_report.report.each do |date_row|
    %tr.day_row
      %td{:colspan => "2" }
        %h3= date_row.first.to_s
    - date_row.last.report.each do |user_row|
      %tr.user_row
        %td
          %h4= "#{user_row.first}: #{user_row[1]}"
        %td
          Commits:
      %tr.user_work
        %td
          = user_row[2]
        %td
          = user_row.last
