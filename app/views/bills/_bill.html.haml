= content_tag_for(:tr, bill) do
  %td= bill.user.name
  %td= bill.hours
  %td.date= bill.created_at.to_s(:date)
  %td.date= bill.due_on
  %td.date= bill.paid_on
  %td= bill.notes
  %td= bill.clients.map{ |c| c.abbreviation }.join(', ')

  %td.tools
    = link_to 'Show', bill
    = link_to 'Edit', edit_bill_path(bill)
    = link_to 'Destroy', bill, :confirm => 'Are you sure?', :method => :delete
